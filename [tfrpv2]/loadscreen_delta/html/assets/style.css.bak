@font-face {
    font-family: Arkhip;
    src: url('../assets/Arkhip.otf');
}

div{
	box-sizing: border-box;
}

body, html{
    width: 100%;
    height: 100%;
    padding: 0;
    margin:0;
	
	overflow: hidden;
	user-select: none;
    cursor: none;
    font-family: Arkhip;
    color: #fff;
	background: linear-gradient(0deg, rgba(30,30,30,1) 0%, rgba(30,30,30,1) 30%, rgba(27,27,27,1) 70%, rgba(0,0,0,1) 100%);
}

.smoothly{
	transition: all 1s ease-out 0s;
}

.video-background {
	position: absolute;
	width: calc(100% + 300px);
	height: calc(100% + 300px);
	left: -150px;
	top: -150px;
	opacity: 1;
	transition: opacity 3s linear 0s;
}
.video-background-hide{
	opacity: 0;
}

.warp-logo{
	position: absolute;
	top: 30%;
	display: flex;
	justify-content: center;
	
    width: 100%;
}

.main-logo{
	display: flex;
	flex-direction: column;
	align-items: center;
	
    width: 600px;
    height: 190px;
}

.server-logo{
	width: 128px;
}

.server-name{
	font-size: 15pt;
}

.content-bg{
	position: absolute;
	top: 12%;
	display: flex;
	justify-content: center;
	opacity: 0;
    width: 100%;
    height: 100%;
}

.video-overlay{
	position: absolute;
    width: 100%;
    height: 100%;
	background: linear-gradient(0deg, rgba(99,99,99,.1) 0%, rgba(99,99,99,.15) 30%, rgba(27,27,27,.4) 70%, rgba(0,0,0,.5) 100%);
}

.main-menu{
	display: flex;
	justify-content: center;
	align-items: center;
	
    height: 35px;
	background-color: rgba(50,50,50,.8);
}

.main-menu-item{
	padding: 0px 35px;
    line-height: 35px;
	text-transform: uppercase;
	transition: all .3s ease-out 0s;
}

.main-menu-item-active{
	color: rgb(188, 99, 255);
	background-color: rgba(10,10,10,.8);
}

.main-menu-item:hover{
	background-color: rgba(10,10,10,.8);
}

.content{
	position: absolute;
	top: 50px;
	
	display: flex;
	justify-content: center;
	align-items: center;
	
    width: 60%;
    height: 70%;
	transition: all 0.2s ease-out 0s;
}
.news-image{
	width: 140px;
	height: 140px;
	filter: grayscale(40%);
	transition: all .4s ease-out 0s;
	border: 3px solid #fff;
}
/* RULES */
.rules-heading{
	font-size: 18pt;
	opacity: 0.7;
	padding: 10px 0px;
}

.r{
	display: flex;
	font-size: 12pt;
	padding-left: 10px;
	padding-bottom: 5px;
}

.rn{
	width: 5%;
	height: 20px;
	text-align: center;
	font-size: 10pt;
	opacity: 0.5;
	background-color: rgba(250,250,250,.2);
}

.rt{
	width: 95%;
	line-height: 20px;
	padding: 0px 10px;
}

/*CONTACT*/
.warp-content{
	display: flex;
	flex-direction: column;
	
    width: 100%;
    height: 100%;
	padding-left: 20px;
	background-color: rgba(10,10,10,.9);
}

.contact-item{
	display: flex;
	padding-top: 20px;
}

.contact-avatar{
	width: 140px;
	filter: grayscale(40%);
	transition: all .4s ease-out 0s;
	border-right: 7px solid #fff;
	border-bottom: 7px solid #fff;
}

.contact-avatar:hover{
	filter: grayscale(0%);
}

.contact-item-info{
	padding-left: 20px;
}

.contact-info-discord{
	font-size: 20pt;
}

.contact-info-status{
	font-size: 10pt;
	color: rgb(166, 128, 194);
}

.contact-info-desc{
	padding: 20px 0px;
	font-size: 14pt;
}

/* music container */
.footer{
	position: absolute;
	bottom: 10px;
	
	display: flex;
	align-items: center;
	justify-content: center;
	height: 120px;
	width: 100%;
}

.music-warp-container{
	display: flex;
	flex-direction: column;
}

.music-volume{
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}

#musicDesc{
	color: #FFF;
	font-size: 9px;
	text-align: center;
	font-weight: bold;
	letter-spacing: 1px;
	text-transform: uppercase;
	text-shadow: 1px 1px 2px black, 1px 1px 1px black; /* Параметры тени */
}

.iconMusic{
	width: 32px;
}

.iconMusic:hover{
	opacity: .75;
}

input[type=range]#musicVolumeSlider{
    -webkit-appearance: none;
    cursor: none;
    width: 100%;
    height: 2px;
    background: rgba(255,255,255,.8);
}

input[type=range]#musicVolumeSlider::-webkit-slider-runnable-track{}
input[type=range]#musicVolumeSlider::-webkit-slider-thumb{
    -webkit-appearance: none;	
    height: 10px;
    width: 10px;
    border-radius: 10px;	
	border: 1px solid rgb(215,215,215);
    background-color: rgb(255,255,255);
}

/* CUSTUM SLIDER -CHROME */
.custom-slider{
	overflow-y: scroll;
}

.custom-slider::-webkit-scrollbar {
	width: 5px;
    height: 5px;
}

.custom-slider::-webkit-scrollbar-thumb { /* 5 - ползунок */
	border-radius: 5px;
    background-color: rgb(188, 99, 255);
}

/* LOADING BAR */
.loadbar{
	position: absolute;
	bottom: 0px;
    width: 100%;
    height: 5px;
	box-shadow: 0 0 16px rgba(0,0,0,0.7);
    background: rgb(90,90,90);
}
#progressBar{
    height: 100%;
    width: 80%;
	transition: all 0.1s ease 0s;
	border-top-right-radius: 55px;
    background: linear-gradient(210deg, rgb(188, 99, 255) 0%, rgb(255,255,100) 100%);
}

/* cursor */
#cursor {
	position: fixed;
	width: 20px;
	z-index: 100;
	pointer-events: none;
}
.mouse-bubbles{
	position: fixed;
	z-index: 99;
	pointer-events: none;
}